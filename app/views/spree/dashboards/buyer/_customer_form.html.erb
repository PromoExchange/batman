<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Add Card's Detail</h4>
  </div>
  <form action="/customer" method="POST" id="customer-form" class="form">
    <div class="panel-body">
      <span class="payment-errors"></span>
      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="input-group">
              <input type="text" size="20" placeholder="Card Number" data-stripe="number"/>
            </div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="input-group">
              <input type="text" size="4" placeholder="CVC" data-stripe="cvc"/>
            </div>
          </div>
           <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="input-group">
              <input type="text" size="2" placeholder="MM" data-stripe="exp-month"/>
            <span> / </span>
            <input type="text" size="4" placeholder="YY" data-stripe="exp-year"/>
            </div>
          </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="submit-btn">
        <button class=' btn btn-success' id='payment-submit' type="submit">Submit</button>
        <span class=' btn btn-default cancel-card'>Cancel</span>
      </div>
    </div>
  </form>
</div>
