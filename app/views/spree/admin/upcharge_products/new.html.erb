<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :upcharges } %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @upcharge } %>

<%= form_for [:admin, @upcharge], { url: "/admin/products/#{@product.id}/upcharge_products", html: { method: :post } } do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions">
      <%= button Spree.t('actions.update'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), "/admin/products/#{@product.id}/upcharge_products", icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
