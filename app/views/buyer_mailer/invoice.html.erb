<h2>Sales Receipt: <%= @auction.reference %></h2>
<p>Date: <%= @auction.ended.strftime('%m/%d/%Y') %></p>


<h4>Bill To:</h4>
<ul style='list-style: none;'>
  <li><%= @auction.buyer.company %></li>
  <li><%= @auction.buyer.address1 %></li>
  <li><%= @auction.buyer.address2 %></li>
  <li>
    <%= @auction.buyer.city %>,
    <%= @auction.buyer.state_text %>,
    <%= @auction.buyer.zipcode %>
  </li>
</ul>


<% if @auction.winning_bid.auction_payments.size > 0 %>
  <h4>Payment Method:</h4>
  <p>Credit Card: <%= @auction.winning_bid.auction_payments.first.credit_card.display_number %></p>
<% end %>


<h4>Order:</h4>
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @auction.product.name %></td>
      <td><%= render partial: '/spree/shared/auction_size_detail', locals: { auction: @auction } %></td>
      <td><%= @auction.winning_bid.bid %></td>
    </tr>
  </tbody>
</table>
