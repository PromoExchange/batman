<% content_for :page_title do %>
  <%= Spree.t(:product_ideas) %>
<% end %>

<div class="tab-pane scrolling" id="buyer-product-ideas">
  <div class="panel panel-default">
    <div class="panel-body">
      <table data-key="<%= spree_current_user.spree_api_key %>"
             data-id="<%= spree_current_user.id %>"
             class="table table-striped" id="buyer-product-ideas-table">
        <thead>
          <tr>
            <th><%= Spree.t(:product_ideas) %></th>
          </tr>
        </thead>
        <tbody>
          <tr><td class='text-center' colspan='4'><i class='fa fa-spinner fa-pulse fa-3x'></i></td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render partial: 'spree/dashboards/buyer/request_sample_modal' %>