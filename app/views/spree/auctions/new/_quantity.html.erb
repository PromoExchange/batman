<% if @auction.wearable? %>
  <%= render partial: 'spree/auctions/auction_size', locals: {f: f} %>
<% else %>
  <div class="form-group">
    <%= f.label(:quantity, Spree.t(:quantity)) %>
    <%= f.number_field(:quantity, class: 'form-control cs-quantity', min: @auction.product.minimum_quantity, placeholder: "Minimum Quantity: #{@auction.product.minimum_quantity}")%>
  </div>
<% end %>
