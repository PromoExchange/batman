<% content_for :page_title do %>
  <%= Spree.t(:won_auctions) %>
<% end %>

<div class="tab-pane scrolling" id="seller-won-auction"
     data-id="<%= spree_current_user.id %>"
     data-key="<%= spree_current_user.spree_api_key %>">
  <div class="panel panel-default">
    <div class="panel-heading"><%= Spree.t(:won_auctions) %></div>
    <div class="panel-body">
      <table data-key="<%= spree_current_user.spree_api_key %>"
             data-id="<%= spree_current_user.id %>"
             class="table table-striped" id="seller-won-auction-table">
        <thead>
          <tr>
            <th><%= Spree.t(:auction_hash) %></th>
            <th><%= Spree.t(:product) %></th>
            <th><%= Spree.t(:date) %></th>
            <th><%= Spree.t(:quantity) %></th>
            <th><%= Spree.t(:status) %></th>
            <th class="actions"><%= Spree.t(:action_col) %></th>
          </tr>
        </thead>
        <tbody>
          <tr><td class='text-center' colspan='6'><i class='fa fa-spinner fa-pulse fa-3x'></i></td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
