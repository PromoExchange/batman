<div class="top-bids col-md-12 well">
  <h4>Top Bids</h4>
  <table class='table'>
    <thead>
      <tr>
        <th><%= Spree.t(:seller) %></th>
        <th><%= Spree.t(:bid) %></th>
        <th class="actions"><%= Spree.t(:action_col) %></th>
      </tr>
    </thead>
    <tbody>
      <% @auction.bids.each do |b| %>
        <% row_class = '' %>
        <% row_class = 'preferred' if @auction.preferred?(b.seller) %>
        <tr class="<%= row_class %>">
          <td><%= b.email %></td>
          <td><%= '%.2f' % b.bid %></td>
          <td><a href="#" class="accept-link" data-id='<%= b.id %>'>Accept</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
