<% content_for :page_title do %>
  <%= link_to Spree.t(:products), admin_products_path %> /
  <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_product_url(@product) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), spree.admin_product_images_url(@product) %>
    <% end if can?(:admin, Spree::Image) %>
    <%= content_tag :li, class: ('active' if current == :properties) do %>
      <%= link_to_with_icon 'list-alt', Spree.t(:properties), spree.admin_product_product_properties_url(@product) %>
    <% end if can?(:admin, Spree::ProductProperty) %>
    <%= content_tag :li, class: ('active' if current == :color_products) do %>
      <%= link_to_with_icon 'list-alt', 'Product Colors', admin_product_color_products_url(@product) %>
    <% end if can?(:admin, Spree::ColorProduct) %>
    <%= content_tag :li, class: ('active' if current == :upcharges) do %>
      <%= link_to_with_icon 'list-alt', 'Upcharges', admin_product_upcharge_products_url(@product) %>
    <% end if can?(:admin, Spree::UpchargeType) %>
    <%= content_tag :li, class: ('active' if current == :imprint_method) do %>
      <%= link_to_with_icon 'list-alt', 'Imprint Methods', admin_product_imprint_methods_products_url(@product) %>
    <% end if can?(:admin, Spree::ImprintMethodsProduct) %>
  </ul>
<% end %>
