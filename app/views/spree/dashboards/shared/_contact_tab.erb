<div class="panel panel-default">
  <div class="panel-body" id="user-panel-edit">
    <%= form_for @pxaccount, url: main_app.pxaccounts_path, class: 'form'  do |user_fields| %>
      <%= render 'spree/shared/error_messages', :object => @pxaccount %>
      <%= user_fields.hidden_field :id, value: spree_current_user.id %>
      <fieldset form="account-form">
        <div class="form-group">
          <%= user_fields.label :email, Spree.t(:email) %>
          <%= user_fields.email_field :email, { disabled: true , class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= user_fields.label :password, Spree.t(:password) %>
          <%= user_fields.password_field :password, { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= user_fields.label :password_confirmation, Spree.t(:password_confirmation) %>
          <%= user_fields.password_field :password_confirmation, { class: 'form-control' } %>
        </div>
        <div class="panel-footer form-actions">
          <button class="btn brn-primary btn-success" id="update-account" type="submit">
            <i class="fa fa-refresh"></i>Update</button>
          <span class="or">or</span>
          <button class="btn btn-default" type="cancel">
            <i class="fa fa-times"></i>Cancel</button>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
