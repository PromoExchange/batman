- content_for :page_title do
  | New Product Color

= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @color_product }

= form_for [:admin, @color_product], url: "/admin/products/#{@product.id}/color_products", html: { method: :post } do |f|
  fieldset
    = render partial: 'form', locals: { f: f }
    .form-actions
      = button Spree.t('actions.update'), 'refresh', 'submit', {class: 'btn-success'}
      | or
      = button_link_to Spree.t('actions.cancel'), "/admin/products/#{@product.id}/color_products"
