<div class="row">
  <div class="col-md-4">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %>
      <span class='required'>*</span>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= f.field_container :dc_acct_num, class: ['form-group'] do %>
      <%= f.label :dc_acct_num, Spree.t(:dc_acct_num) %>
      <span class='required'>*</span>
      <%= f.text_field :dc_acct_num, class: 'form-control' %>
      <%= f.error_message_on :dc_acct_num %>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= f.field_container :company_store, class: ['form-group'] do %>
      <%= f.label :company_store, Spree.t(:company_store) %>
      <%= f.radio_button :company_store, true, class: ['form-group'] %>
      <%= f.error_message_on :company_store %>
    <% end %>
  </div>
</div>
