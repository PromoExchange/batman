<div id="user-logo-tab">
  <div class="well">
    <%= label :logo, :attachment, Spree.t(:add_logo) %>
    <%= file_field :logo, :attachment %>
  </div>
  <div class="well">
    <% unless @user.logos.any? %>
      <p>No logos found</p>
    <% else %>
      <% @user.logos.each do |image| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= link_to image_tag(image.attachment.url(:logo)), image.attachment.url(:logo) %>
          </div>
          <div class="panel-footer">Actions</div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
