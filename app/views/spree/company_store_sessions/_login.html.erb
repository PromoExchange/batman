<%= form_for Spree::User.new, as: :spree_user, url: "/company_store/#{@current_company_store.slug}/login" do |f| %>
  <fieldset id="password-credentials">
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', tabindex: 2, placeholder: Spree.t(:password) %>
    </div>
    <div class="form-group">
      <%= f.submit Spree.t(:login), class: 'btn btn-lg btn-success btn-block', tabindex: 3, id: "MainLoginButton" %>
    </div>
  </fieldset>
<% end %>
