<div class="row">
  <div class="col-md-12">
    <%= f.hidden_field :product_id, value: @product.id %>

    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :color, Spree.t(:color) %>
      <span class='required'>*</span>
      <%= f.text_field :color, class: 'form-control' %>
      <%= f.error_message_on :color %>
    <% end %>
  </div>
</div>
