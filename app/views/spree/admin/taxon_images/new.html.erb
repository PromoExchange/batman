<%= render partial: 'spree/admin/shared/taxon_tabs', locals: { current: :images } %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @taxon } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_image) %>
<% end %>

<%= form_for @image, url: "/admin/taxonomies/#{@taxonomy.id}/taxons/#{@taxon.id}/images", html: { multipart: true } do |f| %>
  <fieldset data-hook="new_image">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_taxonomy_taxon_images_url(@taxonomy, @taxon.id), icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
